<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz_start">

    <TextView
        android:id="@+id/tv_choice_3"
        android:layout_width="61dp"
        android:layout_height="59dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_choice_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_choice_1" />

    <TextView
        android:id="@+id/tv_choice_1"
        android:layout_width="76dp"
        android:layout_height="62dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tv_choice_3"
        app:layout_constraintEnd_toStartOf="@+id/tv_choice_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.744" />

    <TextView
        android:id="@+id/tv_choice_2"
        android:layout_width="73dp"
        android:layout_height="60dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tv_choice_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_choice_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.744" />

    <TextView
        android:id="@+id/tv_choice_4"
        android:layout_width="61dp"
        android:layout_height="67dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_choice_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_choice_2" />

    <TextView
        android:id="@+id/quiztextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sentence"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

</androidx.constraintlayout.widget.ConstraintLayout>